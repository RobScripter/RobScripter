local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/RobScripter/Orion/main/source"))()

local Players = game:GetService("Players")
local LocalizationService = game:GetService("LocalizationService")
local player = Players.LocalPlayer

local SelectedLang = "EN"

local function DetectLang()
    local localeId = LocalizationService.RobloxLocaleId or player.LocaleId
    localeId = string.lower(localeId)

    if string.find(localeId, "fr") then
        SelectedLang = "FR"
    elseif string.find(localeId, "es") then
        SelectedLang = "ES"
    else
        SelectedLang = "EN"
    end
end

DetectLang()

local Window = OrionLib:MakeWindow({Name = "Slap Battles Hub | Loader",HidePremium = false,IntroText = "Slap Battles",IntroIcon = "rbxassetid://15315284749"})

local Tab = Window:MakeTab({
    Name = "Language",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

Tab:AddDropdown({
    Name = "Select Language",
    Default = (SelectedLang == "FR" and "Français")
        or (SelectedLang == "ES" and "Español")
        or "English",
    Options = {"English", "Français", "Español"},
    Callback = function(Value)
        if Value == "English" then
            SelectedLang = "EN"
        elseif Value == "Français" then
            SelectedLang = "FR"
        elseif Value == "Español" then
            SelectedLang = "ES"
        end
    end
})

Tab:AddButton({
    Name = "Load Hub",
    Callback = function(Value)
        OrionLib:Destroy()
    if Value == "English" then
        getgenv().SBH_Language = "EN"
    elseif Value == "Français" then
        getgenv().SBH_Language = "FR"
    elseif Value == "Español" then
        getgenv().SBH_Language = "ES"
    end
end
    end
})

OrionLib:Init()
